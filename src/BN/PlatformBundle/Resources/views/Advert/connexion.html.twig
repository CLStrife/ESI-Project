{% extends "BNPlatformBundle::layout.html.twig" %}

{% block title %}
	Connexion - {{ parent() }}
{% endblock %}


{% block bnplatform_body %}

<h3>Formulaire d'enregistrement</h3>

<div class="well">
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	{{ form_errors(form) }}

	<div class="form-group">
		{{ form_label(form.dateInscript, "Date", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		{{ form_errors(form.dateInscript) }}

		<div class="col-sm-9">
			{{ form_widget(form.dateInscript, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.nom, "Ton nom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		{{ form_errors(form.nom) }}

		<div class="col-sm-9">
			{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.prenom, "Ton pr√©nom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		{{ form_errors(form.prenom) }}
		<div class="col-sm-9">
			{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.pseudo, "Ton pseudo", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		{{ form_errors(form.pseudo) }}
		<div class="col-sm-9">
			{{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
	
	<div class="form-group">
		{{ form_label(form.mail, "Ton mail", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		{{ form_errors(form.mail) }}
		<div class="col-sm-9">
			{{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.password, "Mot de passe", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
		{{ form_errors(form.password) }}
		<div class="col-sm-9">
			{{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}



	{{ form_rest(form) }}

	{{ form_end(form) }}

</div>
			


{% endblock %}