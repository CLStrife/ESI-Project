{% extends "BNPlatformBundle::layout.html.twig" %}

{% block title %}
	Login
{% endblock %}

{% block bnplatform_body %}
	<h3>Veuillez vous connecter</h3>
	<div class="well">
		{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
		{{ form_errors(form) }}

		<div class="form-group">
			{{ form_label(form.pseudo, "Ton pseudo", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			{{ form_errors(form.pseudo) }}
			<div class="col-sm-9">
				{{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.password, "Mot de passe", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
			{{ form_errors(form.password) }}
			<div class="col-sm-9">
				{{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		{{ form_end(form) }}
	</div>
	
	{% endblock %}